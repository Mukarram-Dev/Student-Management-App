<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <TextView
        android:id="@+id/getDay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginTop="10dp"
        android:background="#9239BF"
        android:fontFamily="@font/muli"
        android:padding="10dp"
        android:text="MONDAY:"
        android:textColor="@color/white"
        android:textSize="34sp" />

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="290dp"
        android:layout_height="380dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="90dp"
        app:cardBackgroundColor="#E6E6E6"
        app:cardCornerRadius="30dp"
        app:circularflow_defaultRadius="20dp"
        app:circularflow_radiusInDP="30dp">

        <RelativeLayout
            android:id="@+id/card_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/card_background"
            android:paddingBottom="15dp">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/Name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/muli_bold"
                    android:text="TimeTable"
                    android:textColor="@color/white"
                    android:textSize="22sp"

                    />

                <ImageView
                    android:id="@+id/attend"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:src="@drawable/ic_baseline_table" />


                <TextView
                    android:id="@+id/day"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/Name"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/muli_bold"
                    android:text="Monday"
                    android:textColor="@color/white"

                    android:textSize="22sp" />

                <View
                    android:id="@+id/divide"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_below="@id/day"
                    android:layout_marginTop="5dp"
                    android:background="#A3000000" />


                <TextView
                    android:id="@+id/time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/divide"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/muli_bold"
                    android:text="2:00 pm - 4:00pm"
                    android:textColor="@color/black"

                    android:textSize="22sp" />

                <TextView
                    android:id="@+id/subject"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/time"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/muli_bold"
                    android:text="Mobile Application Development"


                    android:textColor="@color/white"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/room"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/subject"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/muli_bold"
                    android:text="Room-[BSCS-07]"
                    android:textColor="@color/black"

                    android:textSize="22sp" />

                <View
                    android:id="@+id/divide2"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_below="@id/room"
                    android:layout_marginTop="5dp"
                    android:background="#A3000000" />


                <TextView
                    android:id="@+id/teacher"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/divide2"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/muli_bold"
                    android:text="Muhammad jameel"
                    android:textColor="@color/white"
                    android:textSize="22sp"

                    />


            </RelativeLayout>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>