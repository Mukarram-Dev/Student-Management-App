<?xml version="1.0" encoding="utf-8"?>

    <RelativeLayout
        android:layout_width="match_parent"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:background="@drawable/bg"
        tools:context=".CoursesActivity"
        android:layout_height="match_parent">


    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bar"
        android:background="?android:attr/windowBackground">

        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/toolbar"
            android:background="@drawable/bar_background">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/close"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_baseline_arrow_back_24" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Courses"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="15dp"
                    android:textSize="28sp"
                    android:fontFamily="@font/muli_bold"
                    android:textColor="@color/white"
                    android:layout_toEndOf="@id/close"/>


            </RelativeLayout>

        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/bar"
        android:gravity="center"
        android:layout_marginTop="50dp"
        android:orientation="vertical">


        <Button
            android:layout_width="340dp"
            android:layout_height="wrap_content"
            android:text="Enrolled Courses"
            android:textSize="24sp"
            android:drawableTop="@drawable/ic_baseline_date_range_24"
            android:textColor="@color/white"
            android:background="@drawable/button_background"
            android:drawablePadding="10dp"
            android:id="@+id/enCourse"
            />
        <Button
            android:layout_width="340dp"
            android:layout_height="wrap_content"
            android:text="Self Enrollment"
            android:textAlignment="center"
            android:textSize="24sp"
            android:layout_marginTop="32dp"
            android:drawableTop="@drawable/ic_baseline_menu_book_24"
            android:textColor="@color/white"
            android:background="@drawable/button_background"
            android:drawablePadding="10dp"
            android:id="@+id/selfEnrol"

            />
        <Button
            android:layout_width="340dp"
            android:layout_height="wrap_content"
            android:text="Add Marks"
            android:textAlignment="center"
            android:textSize="24sp"
            android:layout_marginTop="32dp"
            android:drawableTop="@drawable/ic_baseline_assignment_24"
            android:textColor="@color/white"
            android:background="@drawable/button_background"
            android:drawablePadding="10dp"
            android:id="@+id/addMarks"

            />

        <Button
            android:layout_width="340dp"
            android:layout_height="wrap_content"
            android:text="See Grades"
            android:textAlignment="center"
            android:textSize="24sp"
            android:layout_marginTop="32dp"
            android:drawableTop="@drawable/ic_baseline_assessment_24"
            android:textColor="@color/white"
            android:background="@drawable/button_background"
            android:drawablePadding="10dp"
            android:id="@+id/showResult"

            />


        <Button
            android:layout_width="340dp"
            android:layout_height="wrap_content"
            android:text="Time Table"
            android:textAlignment="center"
            android:textSize="24sp"
            android:layout_marginTop="32dp"
            android:drawableTop="@drawable/ic_baseline_table_chart_24"
            android:textColor="@color/white"
            android:background="@drawable/button_background"
            android:drawablePadding="10dp"
            android:id="@+id/tymTable"

            />

    </LinearLayout>



    </RelativeLayout>

